
body,html{
  	width: 100%;
  	height: 100%;
  	overflow-x: hidden;
  }
.landing{
  	width: 100%;
  	height: 100%;
  	background: url(../img/bg.png);
  	background-position: center;
  	background-size: cover;
  	text-align: center;
 }
.main{	
	background: #c9dff2;
	opacity: 0.9;
	border-radius: 5px;
	-webkit-border-radius: 5px;
	-moz-border-radius: 5px;
	display: inline-block;
	vertical-align: middle;
	box-sizing: border-box;
}
.main p{
	margin: 10px 0;	
}
button,input{
	border-radius: 5px;
	-webkit-border-radius: 5px;
	-moz-border-radius: 5px;	
}
input{
	padding-left: 9px; 
	border: 1px solid #c0ccda;
	width: 100%;
	height: 34px; 
	box-sizing: border-box;	
}
input:focus{
   	border: 1px solid #8492a6;
}
button{
	display: block;
	border: none;
	outline: none;
	padding: 11px 0;
	text-align: center;
	background: #20a0ff;
	color: #fff;
}
button:hover{
	cursor: pointer;
}
.logo{
	margin: 0 auto;
	margin-bottom: 15px;
}
.logo img{
	width: 100%;
}
p{
	font-weight: bold;
	line-height: 100%;
	text-align: left;
}
.test{
	font-size: 0;	
   	text-align: left;  		
 }
.refresh{
	display: inline-block;
	vertical-align: middle;
	width: 30px;
	height:30px;
	background: url(../img/refresh.png) no-repeat;
	background-position: center;
	background-size: contain;
	}
.el-input__inner {
	height: 36px;
}
.test-img{
   	vertical-align: middle; width:84px; height:32px;
 }
.box2{height:40px;margin-left:10px;}
.box2::before{display:inline-block;content:".";width:0px;height:100%;vertical-align:middle;visibility:hidden;}
@media screen and (min-width:1200px) {
	.main{
		width:360px;		
		padding: 40px 30px 22px 30px;
	}
	.logo{
		width: 86px;
	}
	p{
		font-size: 16px;
	}
   	.test input{
   		width: 119px;
   	}
   	
   	.test-img{
   		vertical-align: middle;
   	}
   	button{
   		width: 140px;  		
   		margin: 30px auto 0;
		font-size: 14px;		
   	}
   	
}

@media screen and (min-width:768px) and (max-width:1199px){
	.main{
		width:290px;		
		padding: 30px 20px 15px 20px;
	}
	.logo{
		width: 64px;
	}
	p{
		font-size: 14px;
	}
   	.test input{
   		width:104px;
   		vertical-align: middle;
   	}
   	.test-img{
   		width:61px;
   		/*margin: 0 17px;*/
   		vertical-align: middle;
   	}
   	.refresh{
   		height: 25px;
   		vertical-align: middle;
   	}
   	button{
   		width: 140px;
   		margin: 20px auto 0;
		font-size: 14px;
   	}
}
@media screen and (max-width:767px){
	body{
		font-family: helvetica;
	}
	.box2{
		margin-left: 0;
	}
	.main{
		width:250px;		
		padding: 30px 25px  15px;
	}
	.logo{
		width:64px;
	}
	.refresh img {
    	height: 30px;
		}
	p{
		font-size: 14px;
	}
   	.test input{
   		width: 104px;
   		vertical-align: middle;
   	}
   	.test-img{
   		width:50px;
   		/*margin: 0 10px;*/
   		vertical-align: middle;
   	}
   	.refresh{
   		height: 22px;
   		vertical-align: middle;
   	}
   	button{  		
   		width: 110px;
   		margin: 20px auto 0;
		font-size: 12px;
   	}
   	.logo{
   		width:64px;
   	}
}